# INSTALL the following: lsd duf dust bat btop neovim yazi starship

# some more ls aliases
alias ls='lsd'
alias lsa='lsd -la'
alias ll='lsd -l'
alias lls='lsd -lS'
alias llt='lsd -lt'

alias top='btop'
alias vim='nvim'
alias du='dust -d 1'
alias df='duf'
alias mc='yazi' # map midnight commander mc to yazi

alias python=python3.13
alias pip=pip3.13

# Prompt
eval "$(starship init zsh)"

# Brew
eval "$(/opt/homebrew/bin/brew shellenv)"

export PATH=~/bin:$PATH
